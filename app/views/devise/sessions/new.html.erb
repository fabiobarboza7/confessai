<div class="container">
  <div class="row mt-5">
    <div class="col-sm-8 offset-sm-2 mt-2 ">
      <div class="p-3 mb-2 bg-success text-white rounded text-center">
        Não se preocupe, as confissões são <span class="border border-warning border-top-0 border-left-0 border-right-0">anônimas</span>. Seu nome não é exposto :)</div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-container bg-white p-5 rounded enter-key"}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Lembrar", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Entrar", class: "btn btn-outline-warning" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
