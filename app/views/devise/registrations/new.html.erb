<div class="container">
  <div class="row mt-5">
    <div class="col-sm-8 offset-sm-2 mt-2 ">
      <div class="p-3 mb-2 bg-success text-white rounded text-center">
        Não se preocupe, as confissões são <span class="border border-warning border-top-0 border-left-0 border-right-0">anônimas</span>. Seu nome não é exposto :)</div>
      <%= simple_form_for(resource, as: resource_name, html: {class: "form-container bg-white p-5 rounded"}, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, label: 'Nome', required: true, autofocus: true %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, label: "E-mail"%>
          <%= f.input :password,
                      required: true,
                      hint: ("No mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" }, label: "Senha" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" }, label: "Confirmar senha" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class: "btn btn-outline-warning" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>